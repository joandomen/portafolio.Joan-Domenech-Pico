---
import GitHub from "./icons/GitHubicon.astro"
import LinkButton from "./LinkButton.astro"
import SQLIcon from "./icons/SQLIcon.astro"
import Link from "./icons/Link.astro"
import JSIcon from "./icons/JSIcon.astro"
import LinuxIcon from "./icons/LinuxIcon.astro"

const TAGS = {
  SQLIcon: {
    name: "SQL",
    class: "bg-[#003159] text-white",
    icon: SQLIcon,
  },
  JSIcon: {
    name: "JavaScript",
    class: "bg-[#003159] text-white",
    icon: JSIcon,
  },
  LinuxIcon: {
    name: "Linux",
    class: "bg-[#003159] text-white",
    icon: LinuxIcon,
  },
 

}
const PROJECTS = [
  {
    title: "Monitorización de servidores y Visualización Mediante Fronted",
    description:
    "El proyecto consistirá en la implementación e instalación de diferentes aplicaciones y servicios, en concreto, se empleará lenguaje de powershell para realizar diferentes scripts de monitorización En los equipos servidor",
    link: "",
    github: "https://github.com/joandomen/Monitorizaci-n_de_servidores_y_Visualizaci-n_Mediante_Fronted/tree/main",
    image: "/projects/svgl.webp",
    tags: [TAGS.SQLIcon,TAGS.JSIcon,TAGS.LinuxIcon],
  },
  
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Monitorización_de_servidores_y_Visualización_Mediante_Fronted" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src= "Monitorizacion.jpg"/>
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-white-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
                
              </span>
            </li>
            
          ))}
        </ul>

      <div class="mt-2 text-white-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>


